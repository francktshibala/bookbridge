# BookBridge Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/bookbridge
DIRECT_URL=postgresql://username:password@localhost:5432/bookbridge

# OpenAI API
OPENAI_API_KEY=sk-...your-openai-key...

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-...your-anthropic-key...

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=bookbridge-books

# Google Books API
GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# ElevenLabs Text-to-Speech
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# NextAuth Authentication
NEXTAUTH_SECRET=generate-a-random-secret-here
NEXTAUTH_URL=http://localhost:3001

# Email Configuration
EMAIL_FROM=noreply@bookbridge.app
EMAIL_SERVER=smtp://username:password@smtp.example.com:587

# Optional Services
KNOWLEDGE_GRAPH_API_URL=
REDIS_URL=

# Feature Flags
ENABLE_PWA=true
NEXT_PUBLIC_CAPACITOR_MODE=false

# Development
NODE_ENV=development